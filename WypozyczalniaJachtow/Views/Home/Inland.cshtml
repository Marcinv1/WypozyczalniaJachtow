@model IEnumerable< WypozyczalniaJachtow.Models.JachtyView>

@{
    ViewBag.Title = "Inland";
}

<section class="py-1 border-bottom" id="features">
    <div class="container px-5 my-3 ">
        <div class="row gx-3 ">
            <div class="col-lg-12 ">
                @if (Model != null)
                {


                    foreach (var item in Model.Where(w => w.TypJachtu == "srodladowy"))
                    {

                <div class="row  mt-3 pb-3 border-bottom border-dark">
                    <div class="col-md-6">
                        <table class="table table-hover">
                            <tbody>
                                <tr>
                                    <td class="col-md-4">Nazwa</td>
                                    <td class="text-align-end"><b>@item.Name</b></td>
                                </tr>
                                <tr>
                                    <td>Port</td>
                                    <td><b>@item.Port</b></td>
                                </tr>
                                <tr>
                                    <td>Ilość miejsc</td>
                                    <td><b>@item.IloscMiejsc</b></td>
                                </tr>
                                <tr>
                                    <td>Długość</td>
                                    <td><b>@item.Dlugosc</b></td>
                                </tr>
                                <tr>
                                    <td>Szerokość</td>
                                    <td><b>@item.Szerokosc</b></td>
                                </tr>
                                <tr>
                                    <td>Silnik</td>
                                    <td><b>@item.Silnik</b></td>
                                </tr>
                                <tr>
                                    <td>Koszt</td>
                                    <td><b>@item.Koszt</b></td>
                                </tr>
                                <tr>
                                    <td>Wyposażenie</td>
                                    <td><b>@item.Wyposazenie</b></td>
                                </tr>
                            </tbody>
                        </table>



                    </div>
                    <div class="col-md-6"><img src="@Url.Content(item.Zdjecie)" class="col-12" /></div>
                    
                </div> 
                    }

                 }
            </div>
        </div>
    </div>
</section>
