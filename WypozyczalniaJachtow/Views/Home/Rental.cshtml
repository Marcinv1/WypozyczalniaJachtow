@model WypozyczalniaJachtow.Models.RezerwacjeView
@{
    ViewBag.Title = "Rental1";
}
<section class="py-5 border-bottom" id="features">
    <div class="container px-3 my-3">
        <div class="row gx-5">
            <div class="col-lg-12 mb-5 mb-lg-0">
                @using (Html.BeginForm("SaveRecord", "Home", FormMethod.Post))
                {

                    @Html.TextBoxFor(Model => Model.JachtID, new { @class = "form-control", @placeholder = "JachtID" })
                    @Html.TextBoxFor(Model => Model.Imie, new { @class = "form-control", @placeholder = "Imie" })
                    @Html.TextBoxFor(Model => Model.NrTel, new { @class = "form-control", @placeholder = "NrTel" })
                    @Html.EditorFor(model => model.Od, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Od, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.DO, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DO, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(Model => Model.Zaliczka, new { @class = "form-control", @placeholder = "Zaliczka" })

                    <input type="submit" class="btn btn-block btn-primary" />
                }
                    



            </div>
        </div>
    </div>
</section>